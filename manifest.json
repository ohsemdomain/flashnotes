{
  "manifest_version": 3,
  "name": "Flash Notes Extension",
  "version": "1.0",
  "description": "Create and manage multiple notes with tags",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "flash-notes-icon.png",
      "48": "flash-notes-icon.png",
      "128": "flash-notes-icon.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "icons": {
    "16": "flash-notes-icon.png",
    "48": "flash-notes-icon.png",
    "128": "flash-notes-icon.png"
  },
  "oauth2": {
    "client_id": "973585656276-36oeiotae47pauj1s9oh6lak2irv9mo3.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/drive.appdata",
      "https://www.googleapis.com/auth/drive.file"
    ]
  }
}